<div class="container">
  <h1>Restaurants</h1>
  <%@restaurants.each do |restaurant| %>
    <div class="row mt-2">
      <div class="col-8">
        <div class="restaurant">
          <h2>
            <%=link_to restaurant.name, restaurant_path(restaurant) %>
          </h2>
          <p>
            <%= restaurant.category%>
          </p>
        </div>
      </div>
    </div>
  <%end %>
  <%= link_to 'Add new restaurant', new_restaurant_path%>
</div>

